{
  "name": "cloud-drive",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "description": "A cloud manager program that supports online consumption of files.",
  "author": "Kisstar <dwh.chn@foxmail.com>",
  "license": "Apache 2.0",
  "homepage": "https://github.com/kisstar/cloud-drive#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kisstar/cloud-drive.git"
  },
  "bugs": {
    "url": "https://github.com/kisstar/cloud-drive/issues"
  },
  "keywords": [
    "cloud",
    "drive"
  ],
  "engines": {
    "node": ">=24.1.0",
    "pnpm": ">=10.14.0"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "^24.1.0",
      "onFail": "download"
    }
  },
  "scripts": {
    "commit": "git-cz",
    "dev": "pnpm -F @cloud-drive/main-app run dev",
    "lint": "eslint",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.0.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "commitizen": "^4.3.1",
    "eslint": "^9.31.0",
    "eslint-plugin-format": "^1.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
